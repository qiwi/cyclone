{
  "name": "@qiwi/cyclone",
  "version": "3.0.1",
  "description": "\"State machine\" for basic purposes",
  "main": "lib/es5/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "jest": "jest --config=jest.config.json",
    "lint": "tslint -p tsconfig.lint.json src/**/*.ts",
    "lint:fix": "yarn lint -- --fix",
    "test": "yarn lint && yarn jest",
    "clean": "rm -rf lib typings",
    "build": "yarn clean && yarn build_es5 && yarn build_es6 && yarn build_ts && yarn build_libdefs",
    "build_es5": "mkdir -p lib/es5 && tsc -p tsconfig.json --target ES5 --outDir lib/es5",
    "build_es6": "mkdir -p lib/es6 && tsc -p tsconfig.json --target ES6 --outDir lib/es6",
    "build_ts": "cp -r src/main/ lib/ts/",
    "build_ts_libdefs": "yarn dtsgen && yarn tsfix",
    "build_flow_libdefs": "yarn flowgen && yarn flowfix",
    "build_libdefs": "yarn build_ts_libdefs && yarn build_flow_libdefs && yarn append",
    "dtsgen": "dts-generator --project ./ --out typings/index.d.ts",
    "append": "yarn append-ts-index && yarn append-flow-index",
    "append-ts-index": "cat typings/index.d.ts src/libdef/ts/append.js | sponge typings/index.d.ts",
    "append-flow-index": "cat typings/index.flow.js src/libdef/flow/append.js | sponge typings/index.flow.js",
    "flowgen": "flowgen typings/index.d.ts --output-file typings/index.flow.js",
    "test_with_report": "yarn test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "docs": "typedoc src/main --ignoreCompilerErrors || exit 0",
    "tsfix": "replace-in-file --configFile=./src/libdef/ts/replace.js",
    "flowfix": "replace-in-file --configFile=./src/libdef/flow/replace.js && yarn flowfix_import",
    "flowfix_import": "node -r esm src/libdef/flow/import.js"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "lib",
    "typings"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/cyclone.git"
  },
  "keywords": [
    "state machine",
    "finite-state machine",
    "FSM",
    "FSA",
    "automata"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@types/jest": "^24.0.11",
    "@types/jest-json-schema": "^1.2.1",
    "coveralls": "^3.0.3",
    "dts-generator": "^3.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "esm": "^3.2.22",
    "flowgen": "1.8.0",
    "jest": "^24.6.0",
    "lodash": "^4.17.11",
    "replace-in-file": "^4.0.0",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.1",
    "tslint": "^5.15.0",
    "tslint-config-qiwi": "^1.0.1",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ],
    "globals": [
      "jest",
      "it",
      "expect",
      "describe",
      "before",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "after",
      "afterEach",
      "xdescribe",
      "xit"
    ],
    "rules": {
      "use-flow-type": 1
    },
    "ignore": [],
    "settings": {}
  }
}
